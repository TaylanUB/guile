(define-module (test-r7rs)
  #:use-module ((test-suite lib) #:select (report))
  #:use-module (srfi srfi-64))

(define (guile-test-runner)
  (let ((runner (test-runner-simple)))
    (test-runner-on-test-end! runner
      (lambda (runner)
        (test-on-test-end-simple runner)
        (let* ((result-alist (test-result-alist runner))
               (result-kind (assq-ref result-alist 'result-kind))
               (test-name (list (assq-ref result-alist 'test-name))))
          (case result-kind
            ((pass)  (report 'pass     test-name))
            ((xpass) (report 'upass    test-name))
            ((skip)  (report 'untested test-name))
            ((fail xfail)
             (apply report result-kind test-name result-alist))
            (else #t)))))
    runner))

(test-with-runner (guile-test-runner)
  ;; Sadly, these aren't true parameters, so we have to save and restore
  ;; them manually.
  (let ((read-opts (read-options))
        (print-opts (print-options)))
    (begin
      (read-enable 'r6rs-hex-escapes)
      (read-enable 'hungry-eol-escapes)
      (read-enable 'r7rs-symbols)
      (print-enable 'r7rs-symbols)
      (print-enable 'datum-labels))
    (primitive-load-path "tests/r7rs-tests.scm")
    (read-options read-opts)
    (print-options print-opts)))

